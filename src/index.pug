mixin embeddedPen(title, slug) 
  p(class="codepen" data-height="265" data-theme-id="light" data-preview='true' data-default-tab="result" data-user="brimarq" data-slug-hash=slug style="height: 265px; box-sizing: border-box; display: flex; align-items: center; justify-content: center; border: 2px solid; margin: 1em 0; padding: 1em;" data-pen-title=title)
  //-   span See the Pen #[a(href="https://codepen.io/brimarq/pen/#{slug}") #{title}] by Brian Marquis (#[a(href="https://codepen.io/brimarq")] @brimarq) on #[a(href="https://codepen.io") CodePen]
  script(async src="https://static.codepen.io/assets/embed/ei.js")

mixin project-card 
  a.project-tile(href='#' target='_blank' ref='noopener noreferrer')

    .card
      //- img.card-img-top(src="https://picsum.photos/782/563")
      img.card-img-top(src="../assets/drum-machine.png")
      .card-body
        h5.card-title Card Title
        p.card-text Card text


